package projetoExemplo;

import java.util.*;
import java.math.*;

public class ClasseProjetoExemplo {

	public static void main(String[] args) {
	
	double peso, altura, imc;
	Scanner entrada = new Scanner(System.in);
	
	System.out.println("Digite a sua massa: ");
	peso = entrada.nextFloat();
	
	System.out.println("Digite a sua altura (Ex. 1,78): ");
	altura = entrada.nextFloat();
	
	imc = peso / (altura * altura);
	System.out.printf("Seu IMC é: %.2f.\n", imc);
	
	if (imc <= 19)
		System.out.println("Você está abaixo do peso... Cuidado pra não voar com o vento...");
	else if (imc > 19 && imc <= 25)
		System.out.println("Você está no peso ideal. Parabéns, continue assim e você estará saudável");
	else if (imc > 25 && imc <= 30)
		System.out.println("Você está levemente acima do peso. Atenção! Caminhe um pouco mais...");
	else if (imc > 30 && imc <= 35)
		System.out.println("Você está com obesidade leve. Cuidado! Fique de olho na alimentação e se exercite mais!");
	else
		System.out.println("Você está obeso. Caramba, levanta desse sofá e vai fazer algum exercício!! Cê quer morrer??");
			
	}
}
